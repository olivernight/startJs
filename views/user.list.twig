<h2>Liste des utilisateurs</h2>
<table >
    <thead>
        <th>Matricule</th>
        <th>Nom</th>
        <th>Pr√©nom</th>
    </thead>
    <tbody>
    {% for user in users %}
    <tr>

            <td>{{user.matricule}}</td>
            <td>{{user.nom}}</td>
            <td>{{user.prenom}}</td>
        <form method="post" name="formulaire" action="/user/delete/{{user._id}}">
            <td><button type="submit">Supprimer</button></td>
        </form>
        <form method="get" name="formulaire" action="/user/form/{{user._id}}">
            <td><button type="submit">Modifier</button></td>
        </form>
    </tr>
    {% endfor %}
    </tbody>

    <form method="get" action='/user/form'>
        <button type="submit">Nouveau</button>
    </form>
</table>
